<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/toolbar_margin_bottom"
        app:navigationIcon="@drawable/arrow_back"
        app:title="@string/settings"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/dark_text_color" />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/button_margin_padding"
        android:paddingVertical="@dimen/settings_padding_vertical"
        android:text="@string/dark_theme"
        android:textColor="@color/dark_text_color"
        android:textSize="@dimen/settings_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/button_margin_padding"
        android:paddingVertical="@dimen/settings_padding_vertical"
        android:text="@string/share"
        android:textColor="@color/dark_text_color"
        android:textSize="@dimen/settings_text_size"
        app:drawableEndCompat="@drawable/share" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/button_margin_padding"
        android:paddingVertical="@dimen/settings_padding_vertical"
        android:text="@string/support"
        android:textColor="@color/dark_text_color"
        android:textSize="@dimen/settings_text_size"
        app:drawableEndCompat="@drawable/support" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/button_margin_padding"
        android:paddingVertical="@dimen/settings_padding_vertical"
        android:text="@string/user_agreement"
        android:textColor="@color/dark_text_color"
        android:textSize="@dimen/settings_text_size"
        app:drawableEndCompat="@drawable/user_agreement" />

</LinearLayout>