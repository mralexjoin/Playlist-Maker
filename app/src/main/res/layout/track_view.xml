<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewArtwork"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/artwork_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/album_placeholder" />

    <TextView
        android:id="@+id/textViewTrackName"
        style="@style/TrackNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/view_text_size"
        app:layout_constraintBottom_toTopOf="@id/textViewArtistName"
        app:layout_constraintEnd_toStartOf="@id/imageViewForward"
        app:layout_constraintStart_toEndOf="@id/imageViewArtwork"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Here Comes The Sun (Remastered 2009) Explicit" />


    <TextView
        android:id="@+id/textViewArtistName"
        style="@style/ArtistTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageViewDot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/textViewTrackName"
        app:layout_constraintTop_toBottomOf="@id/textViewTrackName"
        app:layout_constraintWidth_default="wrap"
        tools:text="The Beatles one two three four five six seven eight nine" />

    <ImageView
        android:id="@+id/imageViewDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/dot"
        app:layout_constraintBottom_toBottomOf="@+id/textViewArtistName"
        app:layout_constraintEnd_toStartOf="@id/textViewTrackTime"
        app:layout_constraintStart_toEndOf="@id/textViewArtistName"
        app:layout_constraintTop_toTopOf="@+id/textViewArtistName"
        app:tint="?attr/colorOnTertiary" />

    <TextView
        android:id="@+id/textViewTrackTime"
        style="@style/ArtistTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/textViewArtistName"
        app:layout_constraintEnd_toEndOf="@id/textViewTrackName"
        app:layout_constraintStart_toEndOf="@id/imageViewDot"
        tools:text="4:01" />


    <ImageView
        android:id="@+id/imageViewForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:contentDescription="@string/open_track_description"
        android:src="@drawable/arrow_forward"
        app:layout_constraintBottom_toTopOf="@+id/imageViewDot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTrackName"
        app:tint="?attr/colorOnTertiary" />

</androidx.constraintlayout.widget.ConstraintLayout>