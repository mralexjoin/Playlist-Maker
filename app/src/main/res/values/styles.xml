<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityMainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/button_margin_padding</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <style name="BaseSettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/button_margin_padding</item>
        <item name="android:paddingVertical">@dimen/settings_padding_vertical</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/view_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsItemStyle" parent="BaseSettingsItemStyle" />

    <style name="EditTextStyle">
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="ClearButtonStyle">
        <item name="tint">@color/gray</item>
    </style>

    <style name="TrackNameTextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ArtistTimeTextView" parent="TrackNameTextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
    </style>

    <style name="HeaderTextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ErrorTextView" parent="HeaderTextView">
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="SimpleButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="PlayerTextView">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    i

    <style name="MediumTextSizePlayerTextView" parent="PlayerTextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TrackInfoFieldTextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TrackInfoHeaderFieldTextView" parent="TrackInfoFieldTextView">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NewPlaylistEditTextStyle" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/view_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="NewPlaylistTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeColor">@color/new_playlist_text_input_layout_box_stroke_color</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="CreatePlaylistButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@drawable/create_playlist_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlaylistTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>