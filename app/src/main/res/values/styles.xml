<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityMainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/button_margin_padding</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <style name="BaseSettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/button_margin_padding</item>
        <item name="android:paddingVertical">@dimen/settings_padding_vertical</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/view_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsItemStyle" parent="BaseSettingsItemStyle" />

    <style name="EditTextStyle">
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="ClearButtonStyle">
        <item name="tint">@color/gray</item>
    </style>

    <style name="TrackNameTextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ArtistTimeTextView" parent="TrackNameTextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
    </style>

</resources>